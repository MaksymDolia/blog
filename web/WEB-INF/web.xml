<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>me.dolia.blog.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <location>/error.html</location>
    </error-page>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>me.dolia.blog.controllers.register.Login</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>me.dolia.blog.controllers.register.Signup</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>me.dolia.blog.controllers.register.Logout</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>me.dolia.blog.controllers.Main</servlet-class>
        <init-param>
            <param-name>postsCount</param-name>
            <param-value>5</param-value>
        </init-param>

    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Tag</servlet-name>
        <servlet-class>me.dolia.blog.controllers.blog.Tag</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tag</servlet-name>
        <url-pattern>/tag/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Blog Post</servlet-name>
        <servlet-class>me.dolia.blog.controllers.blog.BlogPost</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Blog Post</servlet-name>
        <url-pattern>/post/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>New Post</servlet-name>
        <servlet-class>me.dolia.blog.controllers.blog.NewPost</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>New Post</servlet-name>
        <url-pattern>/newpost</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>New Comment</servlet-name>
        <servlet-class>me.dolia.blog.controllers.blog.NewComment</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>New Comment</servlet-name>
        <url-pattern>/post/newcomment</url-pattern>
    </servlet-mapping>

</web-app>